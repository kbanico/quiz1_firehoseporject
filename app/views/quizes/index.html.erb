<div class="container">
  <h1 class = "text-center thought">The Worlds Lastest Thoughts</h1>
   <!-- Button trigger modal -->
    <button type="button" class="pull-right btn btn-info" data-toggle="modal" data-target="#myModal">
      Add a thought <i class="fa fa-lightbulb-o" aria-hidden="true"></i>

    </button>


  <br><br>

  <% @posts.each do |post| %>
    <div class="col-xs-12 col-sm-4 text-center">
      <div class="layer">
        <h3><%= post.title %></h3>
        <br>
        <p><%= post.description %></p>
        <% if post.name.present? %>
        <p class="post-name pull-right">-<%= post.name %></p>
        <% end %>
      </div>

    </div>
  <% end %>




    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">What's On Your Mind?</h4>
          </div>
          <%= simple_form_for Post.new do |f| %>
            <div class="modal-body">

            <%= f.input :title, label: "What's on your mind?", placeholder: "Fear has two meanings" %>
            <%= f.input :description, label: "Your feelings about it?", placeholder: "Forget Everything And Run or Face Everything And Rise, " %>
            <%= f.input :name, label: "Name", placeholder: "The Choice Is Yours" %>


            </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "Create", class: "btn btn-success" %>
          </div>
          <% end %>

        </div>
      </div>
    </div>


  <div class="text-center">

    <%= will_paginate @posts, :page_links => false %>

  </div>



</div>
